    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


<!-- Start Categories of The Month -->
<section class="container py-5">
    <div class="row text-center pt-3">
        <div class="col-lg-6 m-auto">
            <h1 class="h1">Categorias</h1>
            <p>
                Elije entre la gran variedad de productos que ofrece La Casa Del Metronomo
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-4 p-5 mt-3">
            <a href="#"><img src="/images/instrumentos.jpg" class="rounded-circle img-fluid h-75 border"></a>
            <h5 class="text-center mt-3 mb-3">Instrumentos Musicales</h5>
            <p class="text-center"><a class="btn btn-outline-info">Ver mas</a></p>
        </div>
        <div class="col-12 col-md-4 p-5 mt-3">
            <a href="#"><img src="/images/cuerdas.jpg" class="rounded-circle img-fluid h-75 border"></a>
            <h2 class="h5 text-center mt-3 mb-3">Cuerdas</h2>
            <p class="text-center"><a class="btn btn-outline-info">Ver mas</a></p>
        </div>
        <div class="col-12 col-md-4 p-5 mt-3">
            <a href="#"><img src="/images/accesorios.jpg" class="rounded-circle img-fluid h-75 border"></a>
            <h2 class="h5 text-center mt-3 mb-3">Accesorios</h2>
            <p class="text-center"><a class="btn btn-outline-info">Ver mas</a></p>
        </div>
    </div>
</section>
<!-- End Categories of The Month -->


<!-- Start Featured Product -->
<section class="bg-light">
    <div class="container py-5">
        <div class="row text-center py-3">
            <div class="col-lg-6 m-auto">
                <h1 class="h1">Productos Destacados</h1>

            </div>
        </div>
        <div class="row">
            {{#each featuredProducts}}
            {{>productCard this}}
            {{/each}}
        </div>
    </div>
</section>

</div><!-- /.container -->


