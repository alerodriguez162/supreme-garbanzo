                            <dd class="text-right  h5"><strong>${{total}}</strong></dd>
                        </dl>
                        <hr />
                        <p class="text-center mb-3">
                            <img src="/images/stripe.jpg" class="img-fluid" alt="" />
                        </p>

                    </div>
                </div>
            </aside>
        </div>

    </div>
</section>
